<% if @book %>
  <p>Are you sure you want to delete the following book: <em>"<%=h @book.name %>"</em>?</p>
  <form action="/<%= @book.id %>" method="post">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" value="Yes, Delete It!">
    <a href="/<%= @book.id %>">Cancel</a>
  </form>
<% else %>
  <p>Book not found.</p>
<% end %>
